<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_app_name"
        android:textSize="@dimen/splash_screen_title_text_size"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/splash_screen_title_margin_top"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/splashscreen_progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/splash_screen_progressbar_margin_top"
        android:indeterminateTint="@color/white"
        android:layout_gravity="center"/>

</LinearLayout>
